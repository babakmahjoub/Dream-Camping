<%- include ("../partials/header") %>


	<div class="row">
		<h1 style="text-align:center">Edit <%=camps.name%></h1>
		<div style="width: 30%; margin:25px auto;">
			<form action="/campgrounds/<%=camps._id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camps[name]" value="<%=camps.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="camps[price]" value="<%=camps.price%>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camps[img]" value="<%=camps.img%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camps[description]" value="<%=camps.description%>">
				</div>
				<div class="form-group">
					
					<button class="btn btn-lg btn-primary btn-block" >Submit!</button>
				</div>
			</form>
			<a href="/campgrounds/<%=camps._id%>">Go Back</a>
		</div>
		
	</div>	

<%- include ("../partials/footer")%>